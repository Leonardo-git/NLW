{
  "compilerOptions": {                 
    "target": "ES6", 
    "module": "commonjs", 
    "lib": ["ES6"], 
    "allowJs": true,               
    "outDir": "./dist",                        
    "rootDir": "./src",            
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true
  }
}
